{{>public-navbar}}

<div
  class="position-absolute top-50 start-50 translate-middle text-center w-50 p-4 border"
>
  <h2 class="pb-3">Welcome back!</h2>
  <div class="m-3">
    <input
      type="email"
      class="form-control"
      id="email"
      placeholder="Email address"
    />
  </div>
  <div class="m-3">
    <input
      type="password"
      class="form-control"
      id="password"
      placeholder="Password"
    />
  </div>
  <div class="mt-3 mx-3 d-grid gap-2">
    <button
      id="login-btn"
      type="submit"
      class="btn btn-primary mb-3"
    >Login</button>
  </div>
  <div>Not registered? <a href="/signup">Sign Up</a></div>
</div>

