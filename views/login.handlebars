{{>public-navbar}}

<form id="login-form">
  <div
  class="mt-5 w-50 mx-auto text-center p-4 border shadow p-3 mb-5 bg-body rounded login-form"
>
  <h2 class="pb-3">Welcome back!</h2>
  <div class="m-3">
    <input
      type="email"
      class="form-control"
      id="email"
      placeholder="Email address"
    />
  </div>
  <div class="m-3">
    <input
      type="password"
      class="form-control"
      id="password"
      placeholder="Password"
    />
  </div>
  
  <div class="mt-3 mx-3 d-grid gap-2">
    <button
      id="login-btn"
      type="submit"
      class="btn btn-primary mb-3"
    >Login</button>
  </div>
  <div id = "alert-div"></div>
  <div>Not registered? <a href="/signup" id="sign-up-link">Sign Up</a></div>
</div>
</form>

